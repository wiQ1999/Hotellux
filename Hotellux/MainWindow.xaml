<Window x:Class="Hotellux.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotellux"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">



    <Grid>
        <TextBox HorizontalAlignment="Left" Margin="69,74,0,0" Text="{Binding Name}" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Margin="69,104,0,0" Text="{Binding Lastname}" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Margin="69,127,0,0" Text="{Binding DateOfBirth, StringFormat='{}{0:MM/dd/yyyy}'}" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

        <ComboBox HorizontalAlignment="Left" VerticalAlignment="Top" MinWidth="150" Margin="250,81,0,0"
            ItemsSource="{Binding AvaliableWorkerTypes}" 
            SelectedItem="{Binding WorkerType}"/>

        <Button Content="Button" HorizontalAlignment="Left" Margin="69,165,0,0" VerticalAlignment="Top" Command="{Binding SaveCommand}"/>

    </Grid>
</Window>
